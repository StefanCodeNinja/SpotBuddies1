@model IEnumerable<MenuItem>


@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">

        <div class="row">
            <h3 class="text-info offset-3">@Model.FirstOrDefault().Category.Name</h3>
        </div>

        <div class="offset-3 col-lg-9 col-md-12 col-sm-12">
            <div class="row">

                @foreach (var item in Model)
                {

                    <div class="border border-info rounded col-3 " style="margin-bottom:10px; margin-left: 10px; padding: 10px;">
                        @**@

                        <div class="col-md-3 col-md-12 col-sm-12 pl-10">

                            <div class="row">

                                <div class="col-md-3 col-md-12 col-sm-12 pl-10">
                                    <img src="@item.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" alt="Kite_Picture" asp-action="Details" asp-route-id="@item.Id"/>
                                </div>
                            </div>

                            <div class="row">

                                <div class="col-lg-12 pl-10">

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 pl-10">
                                            <label class="text-primary" style="font-size:15px; color:maroon">@item.Name</label>
                                        </div>
                                    </div>


                                    @*@if (item.Spicyness == "1")
                                        {
                                            <img src="~/images/source.gif" width="100px" titel="Very Spicy" />
                                        }
                                        @if (item.Spicyness == "2")
                                        {
                                            <img src="~/images/images.jpg" width="100px" titel="Spicy" />
                                        }
                                        @if (item.Spicyness == "3")
                                        {
                                            <img src="~/images/unnamed.jpg" width="100px" titel="Not Spicy" />
                                        }*@


                                    <div class="row">

                                        <div class="col-12" style="color:maroon">
                                            <h6>@item.Price лв.</h6>

                                        </div>
                                    </div>


                                    @*Description*@
                                    <div class="row p-2">

                                        <button type="submit" asp-action="" value="Add to Cart" class="btn btn-primary form-control mb-2">Add to Cart</button>

                                        <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
             
                }
            </div>

        </div>
    </div>
}
