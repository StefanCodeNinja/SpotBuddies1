@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="backgroundWhiteBorder">
    <h1>@ViewData["Title"]</h1>
    <h4>Associate your @Model.LoginProvider account.</h4>
    <hr />

    <p class="text-info col-md-8 col-lg-12 col-sm-8">
        You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
        Please enter an email address for this site below and click the Register button to finish
        logging in.
    </p>

    <div class="row">
        <div class="col-md-8 col-lg-12 col-sm-8">
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div class="backgroundWhiteBorder col-md-8 col-lg-12 col-sm-8">

                    <h2 class="text-info">Create New Account</h2>
                    <br />
                    <br />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Input.FirstName" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.FirstName" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.FirstName" class="text-danger" />
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Input.LastName" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.LastName" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-danger" />
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger" />
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Input.Email"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger" />
                    </div>





                    <br />
                    <h4>Address</h4>
                    <br />
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Input.StreetAddress" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.StreetAddress" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger" />
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Input.City" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.City" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.City" class="text-danger" />
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Input.PostalCode" class="col-form-label"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Input.PostalCode" class="form-control" />
                        </div>
                        <span asp-validation-for="Input.PostalCode" class="text-danger" />
                    </div>



                </div>

                @*<div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>*@
                <button type="submit" class="btn btn-primary float-lg-right col-lg-4">Register</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
