@model SpotBuddies.Models.ViewModels.OrderDetailsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form method="post">
    <div class="container row border ml-1 backgroundWhiteBorder10Padding" style="width:100%">
        <div class="col-lg-8 col-12">
            <br />
            <input type="hidden" asp-for="OrderHeader.Id" />
            <h4>Order Status</h4>
            <br />
            @if (Model.OrderHeader.Status == "Submitted")
            {
                <h4>SUBMITTED</h4>
            }
            @if (Model.OrderHeader.Status == "Being Prepared")
            {
                <h4>Being Prepared</h4>
            }
            @if (Model.OrderHeader.Status == "It is ready for Send")
            {
                <h4>It is ready for Send...</h4>
            }
            @if (Model.OrderHeader.Status == "Completed")
            {
                <h4>Completed</h4>
            }
            @if (Model.OrderHeader.Status == "Canselled")
            {
                <h4>Canselled</h4>
            }
            <br />

        </div>
    </div>
</form>