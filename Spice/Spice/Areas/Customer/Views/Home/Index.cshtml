<div class="backgroundWhite container">

    <ul id="menu-filters" class="menu-filter-list list-inline text-center">

        <li class="filter active btn btn-secondary ml-1 mr-1" data-content="menu-restaurant">Show all</li>

        @*list all Category names *@
        @foreach (var item in Model.Category)
        {
            <li class="filter  btn-outline-dark ml-1 mr-1" style="display:inline-block; cursor: pointer; border-radius: 5px; font-size:13px;
                                            padding: 10px 20px 10px; font-weight: 700;  text-transform: uppercase; background-color: #f5f9f5;
                                               -moz-transition: all 0.3s; -o-transition: all 0.3s; -webkit-transition: all;
                                               transition: all 0.3s; font-family: sans-serif;">@item.Name</li>
        }

    </ul>

    @*List all products form all categories*@
    @foreach (var category in Model.Category)
    {
        <div class="row" id="menu-wrapper">
            <partial name="_ThumbnailAreaPartial" model="@Model.MenuItem.Where(u=>u.Category.Name.Equals(category.Name))" />
        </div>
    }


</div>

