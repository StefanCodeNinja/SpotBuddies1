@model SpotBuddies.Models.ViewModels.SubCategoryAndCategoryViewFolder
@using SpotBuddies.Extensions

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">

    <br />
    <h2 class="text-info text-black-50">Details Sub Category</h2>
    <br />


    <div class="row">
        <div class="col-8 border-right">
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <form asp-action="Create">
                <input type="hidden" asp-for="SubCategory.CategoryId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <select id="ddlCategoryList" asp-for="SubCategory.CategoryId" disabled asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)" class="form-control"></select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SubCategory.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SubCategory.Name" disabled class="form-control" />
                    </div>
                    <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-3">
                        <partial name="_DetailsBackToListButton" model="Model.SubCategory.Id" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-3 offcet-2">
            @if (Model.SubCategoryList.Count() > 0)
            {
                <p> Existing Subcategories: </p>
                <div id="SubCategoryList">
                    <ul class="list-group"></ul>
                </div>
            }
            else
            {
                <p>No subcategories</p>
            }
        </div>
    </div>
</div>


@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        function updateSubCategoryList() {

            var categorySelected = document.getElementById("ddlCategoryList").value;

            $list = $('#SubCategoryList');

            $.ajax({
                url: '/Admin/SubCategory/GetSubCategory' + categorySelected,
                type: 'GET',
                dataType: 'text',
                success: function (data) {
                    result = JSON.parse(data);
                    $list.html('');
                    $list.append(' <ul class="list-group"> ');
                    for (i in results) {
                        $list.append('<li class="list-group-item">' + results[i].next + '</li>');
                    }
                    $list.append('</ul>');
                }

            });
        }

        $(document).ready(function () {
            updateSubCategoryList();
        });



    </script>
}


